extends ~pages-base/page-base
include ~components/glide/glide
include ~components/card/card
include ~components/cart/cart
include ~components/selector/selector
include ~components/toggle/toggle

block vars
  -
    const className = 'index';
    const title = 'Colors';
    const keywords = 'Colors, marketplace, products, buy';
    const description = 'Colors marketplace';

block content
  main.index__main
    .index__glide-wrapper
      +cart()
      +glide([
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
        { src: "../assets/img/colors.webp", alt: "Изображение вазы" },
      ])
      +selector({
        selected: 1,
        items: [
          'Сначала дорогие',
          'Сначала недорогие',
          'Сначала популярные',
          'Сначала новые',
        ]
      })
      +card({
        title: "Краска Wallquest, Brownsone MS90102",
        price: "6000",
        currency: "₽",
        img: "../assets/img/products/product-0.webp",
      })
      +toggle({
        checked: true,
        text: "Новинки",
      })
      +toggle({
        text: "Есть в наличии",
      })
      +toggle({
        text: "Контрактные",
      })
      +toggle({
        text: "Эксклюзивные",
        checked: true,
      })
      +toggle({
        text: "Распродажа",
      })
